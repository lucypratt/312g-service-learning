		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "^0.5.13",
		"@types/eslint": "8.56.0",
		"@types/node": "20.11.5",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
